
@{
    ViewBag.Title = "Contact";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}


        <aside id="fh5co-hero">
            <div class="flexslider">
                <ul class="slides">
                    <li style="background-image: url(/Areas/Member/Content/images/img_bg_4.jpg);">
                        <div class="overlay-gradient"></div>
                        <div class="container">
                            <div class="row">
                                <div class="col-md-8 col-md-offset-2 text-center slider-text">
                                    <div class="slider-text-inner">
                                        <h1 class="heading-section">İletişim</h1>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </aside>

        <div id="fh5co-contact">
            <div class="container">
                <div class="row">
                    <div class="col-md-5 col-md-push-1 animate-box">

                        <div class="fh5co-contact-info">
                            <h3>İletişim Bilgileri</h3>
                            <ul>
                                @*<li class="address">198 West 21th Street, <br> Suite 721 New York NY 10016</li>*@
                                <li class="phone"><a href="tel://05321111111">05321111111</a></li>
                                <li class="email"><a href="mailto:info@yoursite.com">info@yoursite.com</a></li>                        
                                <li class="icon-instagram"><a href="">instagram</a></li>
                                <li class="icon-facebook2"><a href="">facebook</a></li>
                                <li class="icon-twitter2"><a href="">twitter</a></li>



                            </ul>
                        </div>

                    </div>
                    <div class="col-md-6 animate-box">
                        <h3>İletişime Geç</h3>
                        <form action="#">
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <!-- <label for="fname">First Name</label> -->
                                    <input type="text" id="fname" class="form-control" placeholder="Adınız">
                                </div>
                                <div class="col-md-6">
                                    <!-- <label for="lname">Last Name</label> -->
                                    <input type="text" id="lname" class="form-control" placeholder="Soyadınız">
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <!-- <label for="email">Email</label> -->
                                    <input type="text" id="email" class="form-control" placeholder="E-mail adresiniz">
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <!-- <label for="subject">Subject</label> -->
                                    <input type="text" id="subject" class="form-control" placeholder="Mesaj Konusu">
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <!-- <label for="message">Message</label> -->
                                    <textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="Mesajınız"></textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Mesaj Gönder" class="btn btn-primary">
                            </div>

                        </form>
                    </div>
                </div>

            </div>
        </div>      

       