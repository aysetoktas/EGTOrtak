
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}
@using Entity
@model Education


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">Eğitim Güncelle</h3>

                    </div>
                    <div class="card-body">
                        <form action="/Admin/Education/Update" method="post" enctype="multipart/form-data">


                            <div class="form-group">
                                <label for="ID">Eğitim ID</label>
                                <input name="ID" readonly value="@Model.ID" class="form-control disabled" />
                            </div>

                            <div class="form-group">
                                <label for="Name">Eğitim Adı</label>
                                <input name="Name" value="@Model.Name" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label for="Note">Not</label>
                                <input name="Note" value="@Model.Note" class="form-control" />
                            </div>
                            <div class="form-group">
                                <img src="@Model.ImagePath" class="rounded" height="100" />
                            </div>

                            <div class="">
                                <label for="Image" style="color:coral">Eğitim Logosunu Güncelle</label>
                                <input type="file" name="Image" />
                            </div>

                            <div class="form-group">
                                <label for="Hour">Eğitim Saati</label>
                                <input name="Hour" value="@Model.Hour" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="StartDate">Başlama Tarihi</label>
                                <input name="StartDate" value="@Model.StartDate" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="EndDate">Bitiş Tarihi</label>
                                <input name="EndDate" value="@Model.EndDate" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Certificate">Sertifika</label>
                                <input name="Certificate" value="@Model.Certificate" class="form-control" />
                            </div>


                            <input type="submit" value="Güncelle" class="form-control btn btn-primary" />

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




