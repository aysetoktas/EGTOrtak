@using Entity
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Teacher> teachers = Query.TeacherList();
}


<!DOCTYPE html>

<html>
<head>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h3 class="card-title ">Öğretmenler</h3>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="display" style="width:100%" id="teacherTable">
                                    <thead class=" text-primary">
                                        <tr>
                                            <th>İşlem</th>
                                            <th>Ad</th>
                                            <th>Soyad</th>
                                            <th>E-mail</th>
                                            <th>Şifte</th>
                                            <th>Telefon</th>
                                            <th>Adres</th>
                                            <th>Not</th>
                                            <th>Detail</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in teachers)
                                        {
                                        <tr>
                                            <td>
                                                <div class="row">
                                                    <a href="/Admin/Teacher/Update/@item.ID">
                                                        <i style="margin-left: 12px;" class="material-icons">edit</i>
                                                    </a>
                                                    <a href="/Admin/Teacher/Delete/@item.ID">
                                                        <i class="material-icons">delete</i>
                                                    </a>
                                                </div>
                                            </td>
                                            <td>@item.FirstName</td>
                                            <td>@item.LastName</td>
                                            <td>@item.Email</td>
                                            <td>@item.Password</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Address</td>
                                            <td>@item.Note</td>
                                            <td><img src="@item.Detail" style="width:100px;height:100px;" /></td>

                                            @*<td>
            <img src="@item.ImagePath" style="display:block" height="40" />
        </td>*@


                                        </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</head>
<body>
    <div>
    </div>
</body>
</html>




