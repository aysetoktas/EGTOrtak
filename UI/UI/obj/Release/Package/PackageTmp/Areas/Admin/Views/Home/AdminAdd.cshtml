@using Entity
@{
    ViewBag.Title = "AdminAdd";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    Admin currentAdmin = Session["currentAdmin"] as Admin;
}


<!-- End Navbar -->
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Admin Ekle</h4>
                        <p class="card-category">Admin Profili</p>
                    </div>
                    <div class="card-body">
                        <form action="/Admin/Home/AdminAdd" method="post">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">ADMİN</label>
                                        <input type="text" class="form-control" disabled>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">E-mail Adresi</label>
                                        <input name="Email" type="email" class="form-control" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Ad</label>
                                        <input name="FirstName" type="text" class="form-control">
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Soyad</label>
                                        <input name="LastName" type="text" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Şifre</label>
                                        <input name="Password" type="text" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary pull-right">YENİ ADMİN EKLE</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-profile">
                    <div class="card-avatar">
                        <a href="javascript:;">
                            <img class="img" src="~/Areas/Admin/Content/img/new_logo.png" />
                        </a>
                    </div>
                    <div class="card-body">
                        <h6 class="card-category text-gray">Kullanıcı</h6>
                        <h4 class="card-title">@currentAdmin.FirstName @currentAdmin.LastName</h4>
                        <p class="card-description">
                            @currentAdmin.Email
                        </p>
                        <a href="/Admin/Home/Profil" class="btn btn-primary btn-round">Profilim</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
