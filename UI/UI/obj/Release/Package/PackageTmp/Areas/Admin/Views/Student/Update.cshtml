@using Entity
@model Student
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">Öğrenci Bilgileri Güncelle</h3>

                    </div>
                    <div class="card-body">
                        <form action="/Admin/Student/Update" method="post" enctype="multipart/form-data">


                            <div class="form-group">
                                <label for="ID">Öğrenci ID</label>
                                <input name="ID" readonly value="@Model.ID" class="form-control disabled" />
                            </div>

                            <div class="form-group">
                                <label for="FirstName">Ad</label>
                                <input name="FirstName" value="@Model.FirstName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="LastName">Soyad</label>
                                <input name="LastName" value="@Model.LastName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Email">E-mail</label>
                                <input name="Email" value="@Model.Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Password">Şifre</label>
                                <input name="Password" value="@Model.Password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="PhoneNumber">Telefon</label>
                                <input name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="School">Okul</label>
                                <input name="School" value="@Model.School" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="Grade">Sınıf</label>
                                <input name="Grade" value="@Model.Grade" class="form-control" />
                            </div>
                            <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>