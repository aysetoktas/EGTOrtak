@using Entity
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Education> educations = Query.EducationList();
    List<Category> categories = Query.CategoryList();
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">EĞİTİM EKLE</h3>

                    </div>
                    <div class="card-body">
                        <form action="/Admin/Education/Add" method="post" enctype="multipart/form-data">

                            @*<div class="form-group">
                                    <label for="CategoryID">Sınıf Seçiniz:</label>
                                    <select name="CategoryID" class="form-control">
                                        @foreach (var item in categories)
                                        {
                                            <option value="@item.ID">@item.Name</option>
                                        }
                                    </select>
                                </div>*@

                            <div class="form-group">
                                <label for="Name">Eğitim Adı</label>
                                <input name="Name" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Note">Not</label>
                                <input name="Note" class="form-control" rows="3" />
                            </div>

                            <div class="">
                                <label for="Image">Eğitim Logosu Ekle</label>
                                <input type="file" name="Image">
                            </div>

                            <div class="form-group">
                                <label for="Hour">Saat</label>
                                <input name="Hour" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="StartDate">Başlama Saati</label>
                                <input type="date" name="StartDate" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="EndDate">Bitiş Saati</label>
                                <input type="date" name="EndDate" class="form-control" rows="3" />
                            </div>

                            <div class="form-group">
                                <label for="Certificate">Sertifika</label>
                                <textarea name="Certificate" class="form-control" rows="3"></textarea>
                            </div>


                            <input type="submit" value="Ekle" class="form-control btn btn-primary" />
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
