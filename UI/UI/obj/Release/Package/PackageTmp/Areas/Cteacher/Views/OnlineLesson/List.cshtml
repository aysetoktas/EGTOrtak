@using Entity
@model List<Lesson>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Cteacher/Views/Shared/_TeacherLayout.cshtml";
    List<Education> educations = Query.EducationList();
    List<Lesson> lessons = Query.LessonList();
    List<Teacher> teachers = Query.TeacherList();
}


<div class="col-md-12">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>EğitimAdı</th>
                <th>Ders Adı</th>
                <th>Ders Logosu</th>
                <th>Başlama Tarihi</th>
                <th>Bitiş Tarihi</th>
                <th>Ders Linki</th>
                <th>Döküman Linki</th>
                <th>Öğretmen Adı</th>
                <th colspan="2">Güncelle / Sil</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in lessons)
            {
                <tr>
                    <td>@item.Education.Name</td>
                    <td>@item.Name</td>
                    <td><img src="@item.Path" style="height:100px;width:100px;" /></td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>@item.ProjectLink</td>
                    <td>@item.DocumentLink</td>
                    <td>@item.Teacher.FirstName @item.Teacher.LastName</td>
                    <td>
                        <a href="/Cteacher/Lesson/Update/@item.ID">
                            <input type="submit" value="Güncelle" class="btn btn-primary" />
                        </a>

                        <a href="/Cteacher/OnlineLesson/Delete/@item.ID">
                            <input type="submit" value="SİL" class="btn btn-danger" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

