@using Entity
@model List<Lesson>
@{
    ViewBag.Title = "EducationList";
    Layout = "~/Areas/Cteacher/Views/Shared/_TeacherLayout.cshtml";
    List<Education> educations = Query.EducationList();
    List<Lesson> lessons = Query.LessonList();
    List<Teacher> teachers = Query.TeacherList();
}


<!-- End Navbar -->
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><b> EĞİTİMLER</b></h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <th>EĞİTİM ADI</th>
                            <th>Not</th>
                            <th>Logo</th>
                            <th></th>
                            </thead>
                            <tbody>
                                @foreach (var item in educations)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Note</td>
                                        <td> <img src="@item.ImagePath" style="width:100px;height:100px;" /></td>
                                        <td>
                                            <a href="/Cteacher/Lesson/List?id=@item.ID">
                                                <input type="submit" value="DERSE GİT" class="btn btn-warning" />
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


