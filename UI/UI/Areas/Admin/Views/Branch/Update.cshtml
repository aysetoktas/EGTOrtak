@using Entity
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Branch> branches = Query.BranchList();
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">Branş Güncelle</h3>
                    </div>
                    <div class="card-body">
                        <form action="/Admin/Branch/Update" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="ID">Branş ID</label>
                                <input name="ID" readonly value="@Model.ID" class="form-control disabled" />
                            </div>
                            <div class="form-group">
                                <label for="Name">Sınıf No</label>
                                <input name="Name" value="@Model.Name" class="form-control" />
                            </div>
                            <input type="submit" value="Güncelle" class="form-control btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>