
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Education> educations = Query.EducationList();
    List<Teacher> teachers = Query.TeacherList();
    List<Category> categories = Query.CategoryList();
    List<Unit> units = Query.UnitList();
}

@using Entity
@model Lesson

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">Ders Güncelle</h3>

                    </div>
                    <div class="card-body">
                        <form action="/Admin/Lesson/Update" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="ID">Ders ID</label>
                                <input name="ID" readonly value="@Model.ID" class="form-control disabled" />
                            </div>
                            <div class="form-group">
                                <img src="@Model.Logo" class="rounded" height="100" />
                            </div>

                            <div class="">
                                <label for="Image" style="color:coral">Eğitim Logosunu Güncelle</label>
                                <input type="file" name="Image" />
                            </div>
                            <div class="">
                                <label for="Pdf" style="color:coral">Pdf Güncelle</label>
                                <input type="file" name="Pdf" />
                            </div>

                            <div class="form-group">
                                <label for="Name">Ders Adı</label>
                                <input name="Name" value="@Model.Name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="CategoryID">Sınıf Seçiniz:</label>
                                <select name="CategoryID" class="form-control">
                                    @foreach (var item in categories)
                                    {
                                        <option @(Model.CategoryID == item.ID ? "selected=\"selected\"" : "" ) value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="EducationID">Eğitim Seçiniz:</label>
                                <select name="EducationID" class="form-control" id="educationSelect">
                                    <option selected disabled value="">Eğitim Seçiniz.. </option>
                                    @foreach (var item in educations)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="UnitID">Ünite Seçiniz:</label>
                                <select name="UnitID" class="form-control" id="unitSelect">
                                    @*@foreach (var item in units)
                                        {
                                            <option value="@item.ID">@item.Education.Name / @item.Name</option>
                                        }*@
                                </select>
                            </div>



                            @*<div class="form-group">
                                    <label for="EducationID">Eğitim Seçiniz:</label>
                                    <select name="EducationID" class="form-control">

                                        @foreach (var item in educations)
                                        {
                                            <option @(Model.EducationID == item.ID ? "selected=\"selected\"" : "" ) value="@item.ID">@item.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="UnitID">Ünite Seçiniz:</label>
                                    <select name="UnitID" class="form-control" id="unitSelect">
                                        @foreach (var item in units)
                                        {
                                            <option @(Model.UnitID == item.ID ? "selected=\"selected\"" : "" ) value="@item.ID">@item.Name</option>
                                        }
                                    </select>
                                </div>*@
                            <div class="form-group">
                                <label for="TeacherID">Öğretmen Seçiniz:</label>
                                <select name="TeacherID" class="form-control">
                                    @foreach (var item in teachers)
                                    {
                                        <option @(Model.TeacherID == item.ID ? "selected=\"selected\"" : "" ) value="@item.ID">@item.FirstName @item.LastName</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="StartDate">Başlama Tarihi</label>
                                <input name="StartDate" value="@Model.StartDate" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="EndDate">Bitiş Tarihi</label>
                                <input name="EndDate" value="@Model.EndDate" class="form-control" />
                            </div>

                            <div class="form-group">
                                <label for="Path">Ders Videosu</label>
                                <input name="Path" value="@Model.Path" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="ExamLink">Sınav Linki</label>
                                <input name="ExamLink" value="@Model.ExamLink" class="form-control" />
                            </div>
                            <input type="submit" value="Güncelle" class="form-control btn btn-primary" />

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






