@using Entity
@model List<Lesson>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Education> educations = Query.EducationList();
    List<Lesson> lessons = Query.LessonList();
}

@*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>*@


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">DERSLER</h3>

                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="display nowrap" style="width:100%" id="eduLessonTable">
                                <thead class="text-primary">
                                    <tr>
                                        <th>İşlem</th>
                                        <th>Sınıf</th>
                                        <th style="width:100px;">EğitimAdı</th>
                                        <th>ÜniteAdı</th>
                                        <th>Ders Adı</th>
                                        <th>Ders Logosu</th>
                                        <th>Video Linki</th>
                                        <th>Pdf</th>
                                        <th>Sınav Linki</th>
                                        <th>Başlama Tarihi</th>
                                        <th>Bitiş Tarihi</th>
                                        <th>Öğretmen</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in lessons)
                                    {
                                        if (item.IsLive == false)
                                        {


                                            <tr>
                                                <td>
                                                    <a href="/Admin/Lesson/Update/@item.ID">
                                                        <i style="margin-left: 12px;" class="material-icons">edit</i>
                                                    </a>
                                                    <a href="/Admin/Lesson/Delete/@item.ID">
                                                        <i class="material-icons">delete</i>
                                                    </a>
                                                </td>
                                                <td>@item.Category.Name</td>
                                                <td>@item.Education.Name</td>
                                                <td>@item.Unit.Name</td>
                                                <td>@item.Name</td>
                                                <td> <img src="@item.Logo" style="width:100px;height:100px;" /></td>
                                                <td><iframe src="@item.Path" frameborder="0" width="100" height="100" allowfullscreen="true" mozallowfullscreen="true" webkitallowfullscreen="true"></iframe></td>
                                                @*<td><object data="@item.Path" style="width:100px; height:100px;"></object></td>*@
                                                <td><object data="@item.Content" style="width:100px; height:100px;"></object></td>
                                                <td><object data="@item.ExamLink" style="width:100px; height:100px;"></object></td>
                                                <td>@item.StartDate</td>
                                                <td>@item.EndDate</td>
                                                <td>@item.Teacher.FirstName @item.Teacher.LastName</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



