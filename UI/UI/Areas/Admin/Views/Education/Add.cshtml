                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>*@

                            <div class="form-group">
                                <label for="Name">Eğitim Adı</label>
                                <input name="Name" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Note">Not</label>
                                <input name="Note" class="form-control" rows="3" />
