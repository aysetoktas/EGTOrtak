@using Entity
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    List<Category> categories = Query.CategoryList();
}


<!DOCTYPE html>

<html>
<head>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h3 class="card-title ">SINIFLAR</h3>

                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="display" style="width:100%" id="categoryTable">
                                    <thead class=" text-primary">
                                        <tr>
                                            <th>İşlemler</th>
                                            <th>Ad</th>
                                            <th>Saat</th>
                                            <th>Dersler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in categories)
                                        {
                                            <tr>
                                                <td>
                                                    <a href="/Admin/Category/Update/@item.ID">
                                                        <i style="margin-left: 12px;" class="material-icons">edit</i>
                                                    </a>

                                                    <a href="/Admin/Category/Delete/@item.ID">
                                                        <i class="material-icons">delete</i>
                                                    </a>
                                                </td>

                                                <td>@item.Name</td>
                                                <td>@item.Hour</td>
                                                @*<td>
                                                        <img src="@item.ImagePath" style="display:block" height="40" />
                                                    </td>*@
                                                <td>
                                                    <a href="/Admin/Lesson/Index3?id=@item.ID">
                                                        <input type="submit" value="DERSLERİ GÖR" class="btn btn-warning" />
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</head>
<body>
    <div>
    </div>
</body>
</html>




