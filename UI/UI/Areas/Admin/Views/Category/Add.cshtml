@using Entity
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Category> categories = Query.CategoryList();
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h3 class="card-title ">SINIF EKLE</h3>

                    </div>
                    <div class="card-body">
                        <form action="/Admin/Category/Add" method="post">


                            <div class="form-group">
                                <label for="Name">Sınıf Adı</label>
                                <input name="Name" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="Hour">Saat</label>
                                <input name="Hour" class="form-control" rows="3" />
                            </div>

                            <input type="submit" value="Ekle" class="form-control btn btn-primary" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


