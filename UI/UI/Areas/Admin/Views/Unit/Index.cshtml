                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class ="display" style="width:100%" id="unitTable">
                                    <thead class=" text-primary">
                                        <tr>
                                            <th>İşlemler</th>
                                            <th>Eğitim Adı</th>
                                            <th>Ünite Adı</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in units)
                                        {
                                            <tr>
                                                <td>
                                                    <a href="/Admin/Unit/Update/@item.ID">
                                                        <i style="margin-left: 12px;" class="material-icons">edit</i>
                                                    </a>

                                                    <a href="/Admin/Unit/Delete/@item.ID">
                                                        <i class="material-icons">delete</i>
                                                    </a>
                                                </td>
                                                @*<td>
                                                        <a href="/Admin/Lesson/Index3?id=@item.ID">
                                                            <input type="submit" value="DERSLERİ GÖR" class="btn btn-warning" />
                                                        </a>
                                                    </td>*@
                                                <td>@item.Education.Name</td>

                                                <td>@item.Name</td>
                                                
                                            </tr>
                                        }
                                    </tbody>
                                    </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</head>
