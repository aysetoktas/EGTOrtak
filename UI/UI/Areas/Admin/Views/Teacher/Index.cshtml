@using Entity
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Teacher> teachers = Query.TeacherList();
}


<!DOCTYPE html>

<html>
<head>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h3 class="card-title ">Öğretmenler</h3>

                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class=" text-primary">

                                    <th>Ad</th>
                                    <th>Soyad</th>
                                    <th>E-mail</th>
                                    <th>Şifte</th>
                                    <th>Telefon</th>
                                    <th>Adres</th>
                                    <th>Not</th>
                                    <th>Detail</th>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in teachers)
                                        {
                                        <tr>
                                            <td>@item.FirstName</td>
                                            <td>@item.LastName</td>
                                            <td>@item.Email</td>
                                            <td>@item.Password</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Address</td>
                                            <td>@item.Note</td>
                                            <td><img src="@item.Detail" style="width:100px;height:100px;" /></td>

                                            @*<td>
            <img src="@item.ImagePath" style="display:block" height="40" />
        </td>*@

                                            <td>
                                                <a href="/Admin/Teacher/Update/@item.ID">
                                                    <input type="submit" value="Güncelle" class="btn btn-primary" />
                                                </a>

                                                <a href="/Admin/Teacher/Delete/@item.ID">
                                                    <input type="submit" value="SİL" class="btn btn-danger" />
                                                </a>
                                            </td>
                                        </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</head>
<body>
    <div>
    </div>
</body>
</html>




