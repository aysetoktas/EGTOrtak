
@using Entity
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    List<Education> educations = Query.EducationList();
    List<Lesson> lessons = Query.LessonList();

}

<!DOCTYPE html>

<html>
<head>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h3 class="card-title ">EĞİTİMLER</h3>

                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class=" text-primary">

                                    <th></th>                                    
                                    <th>Ad</th>
                                    <th>Saat</th>
                                    <th>Başlama Tarihi</th>
                                    <th>Bitiş Tarihi</th>
                                    <th>Sertifika</th>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in educations)
                                        {
                                            <tr>
                                                <td>                                                   
                                                    <a href="/Admin/Lesson/Index?id=@item.ID">
                                                        <input type="submit" value="DERSE GİT" class="btn btn-warning" />
                                                    </a>
                                                </td>
                                                <td>@item.Name</td>
                                                <td>@item.Hour</td>
                                                <td>@item.StartDate</td>
                                                <td>@item.EndDate</td>
                                                <td>@item.Certificate</td>

                                                @*<td>
                    <img src="@item.ImagePath" style="display:block" height="40" />
                </td>*@

                                            <td>    
                                                <a href="/Admin/Education/Update/@item.ID">
                                                    <input type="submit" value="Güncelle" class="btn btn-primary" />
                                                </a>

                                                <a href="/Admin/Education/Delete/@item.ID">
                                                    <input type="submit" value="SİL" class="btn btn-danger" />
                                                </a>
                                            </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</head>
<body>
    <div>
    </div>
</body>
</html>
