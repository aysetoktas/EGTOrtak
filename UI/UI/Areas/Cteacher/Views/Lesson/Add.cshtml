@using Entity
@model Category
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Cteacher/Views/Shared/_TeacherLayout.cshtml";

    Category ct = new Category();
    List<Lesson> lessons = Query.LessonList();
    List<Education> educations = Query.EducationList();
    List<Teacher> teachers = Query.TeacherList();
    List<Category> categories = Query.CategoryList();
}
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title"><b> DERS EKLE </b></h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <form action="/Cteacher/Lesson/Add" method="post">

                            <div class="form-group">
                                <label for="EducationID" class="text-primary"><b>Eğitim Seçiniz:</b></label>
                                <select name="EducationID" class="form-control">
                                    @foreach (var item in educations)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="ID" class="text-primary"><b>Sınıf Seçiniz</b></label>
                                <select name="CategoryID" class="form-control">
                                    @foreach (var item in categories)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="Name" class="text-primary"><b>Ders Adı</b></label>
                                <input name="Name" class="form-control" rows="3" />

                            </div>
                            <div class="">
                                <label for="Image" class="text-primary"><b>Eğitim Logosu Ekle</b></label>
                                <input type="file" name="Image">
                            </div>

                            <div class="form-group">
                                <label for="StartDate" class="text-primary"><b>Başlama Tarihi</b></label>
                                <input name="StartDate" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="EndDate" class="text-primary"><b>Bitiş Tarihi</b></label>
                                <input name="EndDate" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="ProjectLink" class="text-primary"><b>Video Linki</b></label>
                                <input name="ProjectLink" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="DocumentLink" class="text-primary"><b>Döküman Linki</b></label>
                                <input name="DocumentLink" class="form-control" rows="3" />
                            </div>
                            <div class="form-group">
                                <label for="TeacherID" class="text-primary"><b>Öğretmen Seçiniz:</b></label>
                                <select name="TeacherID" class="form-control">
                                    @foreach (var item in teachers)
                                    {
                                        <option value="@item.ID">@item.ID @item.FirstName @item.LastName</option>
                                    }
                                </select>
                            </div>
                            <input type="submit" value="Ekle" class="form-control btn btn-primary" />

                        </form>
                    </div>
                </div>
        </div>
    </div>
</div>