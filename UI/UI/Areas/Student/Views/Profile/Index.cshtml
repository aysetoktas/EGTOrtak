            <div class="kt-portlet__body">
                <form id="allForm" enctype="multipart/form-data" action="/Student/Profile/UpdateAccount" method="post" runat="server">
                    <div class="tab-content">


                        <div class="tab-pane active" id="kt_apps_user_edit_tab_1" role="tabpanel">
                            <div class="kt-form kt-form--label-right">
                                <div class="kt-form__body">
                                    <div class="kt-section kt-section--first">
                                        <div class="kt-section__body">
                                            <div class="row">
                                                <label class="col-xl-3"></label>
                                                <div class="col-lg-9 col-xl-6">
                                                    <h3 class="kt-section__title kt-section__title-sm">Customer Info:</h3>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <input value="@currentUsers.ID" type="hidden" name="ID" />
                                                <label class="col-xl-3 col-lg-3 col-form-label">İsim</label>
                                                <div class="col-lg-9 col-xl-6">
                                                    <input class="form-control" type="text" value="@currentUsers.FirstName.ToUpper()" name="firstname">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-3 col-form-label">Soyisim</label>
                                                <div class="col-lg-9 col-xl-6">
                                                    <input class="form-control" type="text" value="@currentUsers.LastName.ToUpper()" name="lastname">
                                                </div>
                                            </div>

                                            @*<div class="form-group row">
                                                    <label class="col-xl-3 col-lg-3 col-form-label">Okul Adı</label>
                                                    <div class="col-lg-9 col-xl-6">
                                                        <select class="form-control" name="SchoolID">
                                                            @foreach (var item in schools)
                                                            {
                                                                <option @(Model.Name == item.Name ? "selected =\"selected\"":"" ) value="@item.Name"></option>
                                                            }
                                                        </select>
                                                        <input class="form-control" type="text" value="@currentUser.School.Name.ToUpper()" name="school">
                                                        <span class="form-text text-muted">Okulunuzun adını listeden seçiniz...</span>
                                                    </div>
                                                </div>*@
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-3 col-form-label">Telefon</label>
                                                <div class="col-lg-9 col-xl-6">
                                                    <div class="input-group">
                                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-phone"></i></span></div>
                                                        <input type="text" class="form-control" value="@currentUsers.PhoneNumber" name="phonenumber" placeholder="Phone" aria-describedby="basic-addon1">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-3 col-form-label">Email Adresi</label>
                                                <div class="col-lg-9 col-xl-6">
                                                    <div class="input-group">
                                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-at"></i></span></div>
                                                        <input type="text" class="form-control" value="@currentUsers.Email" name="email" placeholder="Email" aria-describedby="basic-addon1">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group form-group-last row">
                                                <label class="col-xl-3 col-lg-3 col-form-label"></label>
                                                <div class="col-lg-9 col-xl-6">
                                                    <div class="input-group">
                                                        <button type="submit" onclick="UpdateAccount()" class="btn btn-label-brand btn-bold btn-sm kt-margin-t-5 kt-margin-b-5">Bilgilerimi Güncelle</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane" id="kt_apps_user_edit_tab_3" role="tabpanel">
                            <div class="kt-form kt-form--label-right">
                                <div class="kt-form__body">
                                    <div class="kt-section kt-section--first">
                                        <div class="kt-section__body">
                                            <div class="alert alert-solid-danger alert-bold fade show kt-margin-t-20 kt-margin-b-40" role="alert">
                                                <div class="alert-icon"><i class="fa fa-exclamation-triangle"></i></div>
                                                <div class="alert-text">Şifre oluştururken içerisinde karakter, harf içermesine ve tahmin edilebilir olmamasına dikkat etmenizi tavsiye ederiz.</div>
                                                <div class="alert-close">
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                        <span aria-hidden="true"><i class="la la-close"></i></span>
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <label class="col-xl-3"></label>
                                                <div class="col-lg-9 col-xl-6">
                                                    <h3 class="kt-section__title kt-section__title-sm">Şifreni Değiştir:</h3>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-3 col-form-label">Mevcut Şifre</label>
                                                <div class="col-lg-9 col-xl-6">
                                                    <input type="password" class="form-control" value="" placeholder="Mevcut Şifre" name="currentPassword">
                                                    <a href="#" class="kt-link kt-font-sm kt-font-bold kt-margin-t-5">Şifreni mi unuttun?</a>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-xl-3 col-lg-3 col-form-label">Yeni Şifre</label>
                                                <div class="col-lg-9 col-xl-6">
                                                    <input type="password" class="form-control" value="" placeholder="Yeni Şifre" name="Password">
                                                </div>
                                            </div>
                                            <div class="form-group form-group-last row">
                                                <label class="col-xl-3 col-lg-3 col-form-label">Şifre Doğrulama</label>
                                                <div class="col-lg-9 col-xl-6">
                                                    <input type="password" class="form-control" value="" placeholder="Şifre Doğrulama" name="rePassword">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="kt-separator kt-separator--space-lg kt-separator--fit kt-separator--border-solid"></div>
                                <div class="kt-form__actions">
                                    <div class="row">
                                        <div class="col-xl-3"></div>
                                        <div class="col-lg-9 col-xl-6">
                                            <a href="#" class="btn btn-label-brand btn-bold" onclick="PasswordChange()">Değişiklikleri Kaydet</a>
                                            <a href="/Student/Home/Index" class="btn btn-clean btn-bold">İptal</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

