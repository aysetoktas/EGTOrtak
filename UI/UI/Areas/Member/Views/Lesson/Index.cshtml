@using Entity
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
    List<Lesson> lessons = Query.LessonList();
}


<aside id="fh5co-hero">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url(/Areas/Member/Content/images/slider33.jpg); width:">
                <div class="overlay-gradient"></div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 text-center slider-text">
                            <div class="slider-text-inner">
                                <h1 class="heading-section">DERSLER</h1>
                                @*<h2>Free html5 templates Made by <a href="http://freehtml5.co/" target="_blank">freehtml5.co</a></h2>*@
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>

<div id="fh5co-course">
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
                <h2>DERSLER</h2>
                <p>Dignissimos asperiores vitae velit veniam totam fuga molestias accusamus alias autem provident. Odit ab aliquam dolor eius.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in lessons)
            {

                <div class="col-md-6 animate-box">
                    <div class="course">
                        <a href="#" class="course-img" style="background-image: url(@item.Path);">
                        </a>
                        <div class="desc">
                            <h3><a href="#">@item.Name</a></h3>
                            <p>@item.Content</p>
                            <span><a href="#" class="btn btn-primary btn-sm btn-course">Satın Al</a></span>
                        </div>
                    </div>
                </div>
            }
        </div>



    </div>
</div>

